#!/bin/bash

set -e -x

pkg_dir=$(readlink -nf /var/vcap/packages/golang-1.7)
export GOROOT=$pkg_dir
export GOPATH=$PWD
export PATH=$GOROOT/bin:$PATH

mkdir ../src && cp -a * ../src/ && mv ../src ./src

mkdir -p $BOSH_INSTALL_TARGET/bin

go build -o $BOSH_INSTALL_TARGET/bin/service-adapter src/service-adapter/*.go

mv bosh-cli-2.0.31-linux-amd64 $BOSH_INSTALL_TARGET/bin/bosh
chmod +x $BOSH_INSTALL_TARGET/bin/bosh
